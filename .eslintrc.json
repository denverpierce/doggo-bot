{
    "env": {
        "browser": false,
        "node": false,
        "es2020": true
    },
    "extends": [
        "airbnb-base",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".jsx",
                    ".ts",
                    ".tsx"
                ],
                "moduleDirectory": [
                    "node_modules",
                    "src/"
                ]
            }
        }
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": [
            "warn",
            "always"
        ],
        "import/extensions": [
            "warn",
            "never"
        ],
        "arrow-parens": [
            "warn",
            "as-needed"
        ],
        "object-shorthand": [
            "warn",
            "consistent-as-needed"
        ],
        "max-len": [
            "warn",
            {
                "code": 120
            }
        ]
    }
}